{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": ["warn", "tab"],
		// "linebreak-style": ["warn", "windows"],
		"quotes": ["warn", "double"],
		"semi": ["error", "always"],
		"no-unreachable": ["warn"],
		// warn if no defualt case in switch statements
		"default-case": ["warn"],
		// warn if default case is not last in switch statement
		"default-case-last": ["warn"],
		// warn when a var is not used instead of error
		"no-unused-vars": ["warn"],
		"space-before-function-paren": ["warn", {"anonymous": "never", "named": "never", "asyncArrow": "always"}],
		"no-trailing-spaces": ["warn"],
		// warn if using var instead of const or let
		"no-var": ["warn"],
		// warn if yoda condition is used ("red" == color instead of color == red)
		"yoda": ["warn"],
		//! always use === instead of ==
		"eqeqeq": ["warn", "always"],
		"no-empty": ["warn", { "allowEmptyCatch": true }],
		"for-direction": ["off"]
	}
}
